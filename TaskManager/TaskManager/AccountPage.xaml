<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TaskManager.AccountPage">
    <ContentPage.Content>
        <StackLayout Padding="20" Spacing="20">
            <!-- Header -->
            <Label Text="Account Details"
                   FontSize="24"
                   FontAttributes="Bold"
                   HorizontalOptions="Center" />

            <!-- User Info -->
            <Frame BackgroundColor="#f5f5f5" CornerRadius="10" Padding="15" Margin="0,10">
                <StackLayout Spacing="10">
                    <Label Text="Name" FontSize="16" TextColor="Gray" />
                    <Label x:Name="NameLabel" FontSize="18" TextColor="Black" FontAttributes="Bold" />

                    <Label Text="Email" FontSize="16" TextColor="Gray" />
                    <Label x:Name="EmailLabel" FontSize="18" TextColor="Black" FontAttributes="Bold" />
                </StackLayout>
            </Frame>

            <!-- Delete Account Button -->
            <Button Text="Delete Account"
                    BackgroundColor="#FF3B30"
                    TextColor="White"
                    FontSize="16"
                    CornerRadius="10"
                    Padding="10"
                    Clicked="OnDeleteAccountClicked"
                    HorizontalOptions="Center" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>